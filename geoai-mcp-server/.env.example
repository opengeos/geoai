# GeoAI MCP Server Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# WORKSPACE CONFIGURATION (REQUIRED)
# =============================================================================

# Directory where input files are read from (must exist)
GEOAI_INPUT_DIR=/path/to/your/input/directory

# Directory where output files are written to (created if doesn't exist)
GEOAI_OUTPUT_DIR=/path/to/your/output/directory

# =============================================================================
# RESOURCE LIMITS (OPTIONAL)
# =============================================================================

# Maximum time in seconds for any operation (default: 300 = 5 minutes)
GEOAI_TIMEOUT=300

# Maximum memory in GB for processing (default: 8)
GEOAI_MAX_MEMORY_GB=8

# Device preference: 'cuda', 'mps', 'cpu', or 'auto' (default: auto)
GEOAI_DEVICE=auto

# =============================================================================
# LOGGING CONFIGURATION (OPTIONAL)
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
GEOAI_LOG_LEVEL=INFO

# Log file path (default: stderr only)
# GEOAI_LOG_FILE=/path/to/geoai-mcp.log

# =============================================================================
# MODEL CONFIGURATION (OPTIONAL)
# =============================================================================

# Number of models to keep cached in memory (default: 3)
GEOAI_MODEL_CACHE_SIZE=3

# Hugging Face cache directory (default: system default)
# HF_HOME=/path/to/hf/cache

# =============================================================================
# API KEYS (IF NEEDED FOR SPECIFIC FEATURES)
# =============================================================================

# Planetary Computer API key (optional, for data downloads)
# PC_SDK_SUBSCRIPTION_KEY=your_key_here

# OpenAI API key (if using AI agents)
# OPENAI_API_KEY=your_key_here
